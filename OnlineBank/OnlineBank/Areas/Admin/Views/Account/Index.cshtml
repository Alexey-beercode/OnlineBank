@model System.Collections.Generic.List<OnlineBank.Data.ViewModels.AccountWithClientViewModel>

@{
    Layout = "_AdminLayout";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Клиент</th>
                                <th>Баланс</th>
                                <th>Номер</th>
                                <th>Статус</th>
                            </tr>
                            </thead>
                            <tbody>
                            @if (Model.Count != 0)
                            {
                                @foreach (var account in Model)
                                {
                                    <tr>
                                        <td>@account.Client.Name @account.Client.Surname</td>
                                        <td>@account.Account.Balance</td>
                                        <td>@account.Account.Number</td>
                                        <td>@(account.Account.IsClosed ? "Закрыт" : "Открыт")</td>
                                    </tr>
                                }
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>