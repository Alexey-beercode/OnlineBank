@model System.Collections.Generic.List<OnlineBank.Data.Entity.Client>

@{
    Layout = "_AdminLayout";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Клиенты</h3>

                        <div class="card-tools">
                            <form method="get" action="@Url.Action("SearchClients")" class="input-group input-group-sm" style="width: 300px;">
                                <input type="text" name="name" class="form-control float-right" placeholder="Поиск по ФИО">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ФИО</th>
                                    <th>Дата рождния</th>
                                    <th>Адрес</th>
                                    <th>Телефон</th>
                                    <th>Редактировать</th>
                                    <th>Удалить</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count != 0)
                                {
                                    @foreach (var client in Model)
                                    {
                                        <tr>
                                            <td>@client.Name @client.Surname</td>
                                            <td>@client.BirthDay</td>
                                            <td>@client.Address</td>
                                            <td>@client.Phone</td>
                                            <td><a href="@Url.Action("Update", "Client", new { clientId = client.Id })">Редактировать</a></td>
                                            <td><a style="align-content: center" href="@Url.Action("Delete", "Client", new { clientId = client.Id })"><i class="fas fa-trash-alt"></i></a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
